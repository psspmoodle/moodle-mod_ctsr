<div class="container">
    <div class="row my-3">
        <div class="col-12 border pb-3">
            <ul class="nav nav-pills mb-3 d-flex justify-content-center flush" id="pills-tab" role="tablist">
                {{#tabs}}
                    {{> mod_ctsr/nav }}
                {{/tabs}}
            </ul>
            <div class="tab-content" id="pills-tabContent">
                {{#tabs}}
                    {{> mod_ctsr/pane }}
                {{/tabs}}
            </div>
            <div class="d-flex justify-content-between">
                {{^finishpage}}
                {{{update}}}
                {{! Bootstrap tooltips need a wrapper around a disabled button to display a tooltip on that button}}
                <span id="submit-button-wrapper" data-toggle="tooltip" title="Please complete all Score and Comments fields.">{{{submit}}}</span>
                {{/finishpage}}
                {{#finishpage}}
                    <a href="{{finishpage}}" class="ml-auto btn btn-secondary">View finish page</a>
                {{/finishpage}}
            </div>
        </div>
    </div>
</div>
{{{formclose}}}



